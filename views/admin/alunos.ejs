<%-include('./cabecalho.ejs')%>
<!-- bloco principal -->
<main id="main" class="main">
  <div class="pagetitle">
    <h1>Alunos</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/principaladm">Principal</a></li>
        <li class="breadcrumb-item"><a href="/alunos">Alunos</a></li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">

        <div class="card-body">
          <h5 class="card-title">Todos os usu√°rios cadastrados: </h5>
          <form method="post">
          <div style="display: flex; gap: 20px">
            <h5 class="card-title">Nome</h5>
              <input class="form-control" type="text" name="nome" placeholder="Pesquise o nome do aluno"/>
              <button
                type="submit"
                style="width: 200px; height: 50px"
                class="btn btn-primary"
                id="AplicarFiltro"
              >
                Aplicar Filtro
              </button>
            </form>
            
          </div>

          <!-- Table with stripped rows -->
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Curso</th>
                <th scope="col">Turma</th>
                <th scope="col">Update</th>
              </tr>
            </thead>
            <tbody>
              <% let linha = 0; %> <% usuarios.forEach(function(usuario) { %> <%
              if (!usuario.admin) { %> <%linha += 1; %>
              <tr class="curso">
                <th scope="row"><%=linha %></th>
                <td><%= usuario.nome %></td>
                <td><%= usuario["Turma.Curso.curso"] %></td>
                <td><%= usuario["Turma.turma"] %></td>
                <td>
                  <div style="display: flex; gap: 15px">
                    <form method="post" action="/verperfil/<%= usuario.id %>">
                    <button type="submit"  href="" class="btn btn-primary">
                     Ver Perfil
                    </button>
                    </form>
                    <form method="post" action="/excluiraluno/<%=usuario.id%>">
                    <button type="submit" class="btn btn-danger" >
                      Excluir Aluno
                    </button>
                  </form>
                  </div>
                </td>
              </tr>
              <% }%> <% }); %>
            </tbody>
          </table>
          <!-- End Table with stripped rows -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->

<%-include('./rodape.ejs')%>





