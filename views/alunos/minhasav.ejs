<%-include('./cabecalho.ejs')%>
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Profile</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/principal">Principal</a></li>
          <li class="breadcrumb-item">Minhas Avaliações/li>
          
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
      <div class="row">
        <div class="col-xl-4">

          <div class="card">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
              <div class="profile_picture">
                <% if (usuario.foto) { %>
                  <img  src="/img/<%= usuario.foto %>" />
                <% } else { %>
                  <img  alt="Profile" src="/img/user.png" />
                <% } %>
              </div>
              <h2><%= usuario.nome%></h2>
              
              
            </div>
          </div>

        </div>

        <div class="col-xl-8">

          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
              <ul class="nav nav-tabs nav-tabs-bordered">

                
                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Resumo</button>
                </li>


              </ul>
              

              <div class="tab-pane fade show active profile-overview" id="profile-overview">

                  <div class="card">
                    <div class="card-body">
                      <h5 class="card-title">Lista de Avaliações do usuario: </h5>
                      <% if (!avaliacoes.length && !avaliacoesdae.length){ %>
                      <h3 class="card-title">O usuário não possui avaliações. </h3>
                      <% } else { %>
                      
                      <ul class="list-group list-group-flush">
                        <% let linha = 0; %> 
                        <% avaliacoes.forEach(function(avcorp){ %>
                          <% linha += 1; %>
                          <li class="list-group-item li">Avaliação Corporal <%= linha %>
                            <form method="post" action="/verminhaavaliacaocorp/<%= avcorp.id %>">
                            <button type="submit" class="btn btn-outline-info">Ver avaliação</button>
                          </form>
                          
                          </li>
                        <% }); %>
                        
                        <% let index = 0; %> 
                        <% avaliacoesdae.forEach(function(avdae) { %>
                          <% index += 1; %>
                          <li class="list-group-item li">Avaliação DAE <%= index %>
                            
                            <form method="post" action="/verminhaavaliacaodae/<%= avdae.id %>">
                            <button type="submit" class="btn btn-outline-info">Ver avaliação</button>
                            </form>
                          </li>
                        <% }); %>
                      </ul>
                      <% } %>
                    </div>
                  </div>
                  

                </div>
                

               

              </div><!-- End Bordered Tabs -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->


  <style>


.profile_picture img {
  height: 100px;
  width: 100px;
  border-radius: 50%;
  object-fit: cover;
  background: #dfdfdf;
}

.li {
  display: flex;
  gap: 5%;
}

  </style>
  <script src="js/novasenha.js"></script>
  


<%-include('./rodape.ejs')%>