  <body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="d-flex align-items-center justify-content-between">
        <a href="/principal" class="logo d-flex align-items-center">
          <img src="/img/logo.png" alt="" />
          <span class="d-none d-lg-block">Farol da saúde</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
      </div>
      <!-- End Logo -->

      <!-- End Search Bar -->

      <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
          <li class="nav-item dropdown pe-3">
            <a
              class="nav-link nav-profile d-flex align-items-center pe-0"
              href="#"
              data-bs-toggle="dropdown"
            >
              <div class="profile_picture">
                <% if (usuario.foto) { %>
                <img src="/img/<%= usuario.foto %>" />
                <% } else { %>
                <img alt="Profile" src="/img/user.png" />
                <% } %>
              </div>
              <span class="d-none d-md-block dropdown-toggle ps-2"
                ><%= usuario.nome %></span
              > </a
            ><!-- End Profile Iamge Icon -->

            <ul
              class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile"
            >
              <li class="dropdown-header">
                <h6><%= usuario.nome %></h6>
                <span></span>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <a
                  class="dropdown-item d-flex align-items-center"
                  href="/perfilalunos"
                >
                  <i class="bi bi-person"></i>
                  <span>Meu Perfil</span>
                </a>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <a
                  class="dropdown-item d-flex align-items-center"
                  href="/perfilalunos"
                >
                  <i class="bi bi-gear"></i>
                  <span>Configurações da conta</span>
                </a>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <form method="post" action="/sair" style="display: inline;">
                  <button type="submit" class="dropdown-item d-flex align-items-center" style="background: none; border: none; cursor: pointer;">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Sign Out</span>
                  </button>
                </form>
              </li>
            </ul>
            <!-- End Profile Dropdown Items -->
          </li>
          <!-- End Profile Nav -->
        </ul>
      </nav>
      <!-- End Icons Navigation -->
    </header>
    <!-- End Header -->
    <aside id="sidebar" class="sidebar">
      <ul class="sidebar-nav" id="sidebar-nav">
        <li class="nav-item">
          <a class="nav-link collapsed" href="/principal">
            <i class="bi bi-house-door"></i>
            <span>Principal</span>
          </a>
        </li>
        
        <li class="nav-item">
          <a class="nav-link collapsed" href="/abreavdae">
            <i class="bi bi-clipboard-data"></i>
            <span>Fazer Avaliação DAE</span>
          </a>
        </li>
        
        <li class="nav-item">
          <a class="nav-link collapsed" href="/abreav">
            <i class="bi bi-journal-text"></i>
            <span>Minhas Avaliações</span>
          </a>
        </li>
        
        

        <li class="nav-heading">Pages</li>

        <li class="nav-item">
          <a class="nav-link collapsed" href="/perfilalunos">
            <i class="bi bi-person"></i>
            <span>Meu perfil</span>
          </a>
        </li>
        <!-- End Perfil Page Nav -->

        <!-- No lugar do link atual -->
        <li class="nav-item">
          <form method="post" action="/sair" style="display: inline">
            <button
              type="submit"
              class="nav-link collapsed"
              style="background: none; border: none; cursor: pointer"
            >
              <i class="bi bi-box-arrow-in-right"></i>
              <span>Logout</span>
            </button>
          </form>
        </li>

        <!-- End Logout Nav -->
      </ul>
    </aside>
    <!-- End Sidebar-->
  </body>
</html>
<style>
  .profile_picture img {
    height: 100px;
