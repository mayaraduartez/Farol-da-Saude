</head>

<body>

  <main>
    <div class="container">

      <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

              <div class="d-flex justify-content-center py-4">
                <a href="index.html" class="logo d-flex align-items-center w-auto">
                  <img src="img/logo.png" style="     max-height: 90px;"alt="">
                  <span class="d-none d-lg-block">Farol da Saúde</span>
                </a>
              </div><!-- End Logo -->

              <div class="card mb-3">

                <div class="card-body">

                  <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4">Recuperar senha</h5>
                    
                  </div>

                  <form method="post">

                    <!-- email -->
                    <div class="col-12">
                      <label for="yourUsername" class="form-label">Email</label>
                      <div class="input-group has-validation">
                        <input type="email" name="email" class="form-control" required>
                        <div class="invalid-feedback">Por favor, verifique seu email!</div>
                      </div>
                    </div>

                    <div class="col-12">
                        <label for="yourUsername" class="form-label">Token Recebido</label>
                        <div class="input-group has-validation">
                          <input type="text" name="token" class="form-control" required>
                        </div>
                      </div>

                      <div class="col-12">
                        <label for="yourUsername" class="form-label">Nova Senha</label>
                        <div class="input-group has-validation">
                          <input type="password" name="senha" id="senha" class="form-control" required>
                          
                        </div>
                      </div>

                      <div class="col-12">
                        <label for="yourUsername" class="form-label">Confirme a nova senha</label>
                        <div class="input-group has-validation">
                          <input type="password" name="novasenha" id="novasenha" class="form-control"  required>
                        </div>
                      </div>

                    
                    <div class="col-12">
                      <button class="btn btn-primary w-100" type="submit">Enviar </button>
                    </div>
                    <div class="mensagem" style="color: red; text-align: center;">
                      <% if(msg) {%>
                        <%= msg %>
                      <%}%>
                        
                    </div>
                    <div class="col-12" style="display:flex; justify-content: center;">
                        <p class="small mb-0"> <a href="/login">Caso não possua cadastro clique aqui!</a></p>
                      
                    </div>  
                  </form>

                </div> 
              </div>
            </div>
          </div>
        </div>

      </section>

    </div>
  </main><!-- End #main -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

